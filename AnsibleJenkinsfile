pipeline {
  agent any
  environment {
   ANSIBLE_PRIVATE_KEY=credentials('instances_private_key')
  }
  stages {
    stage('Git Checkout'){
        steps {
            git branch: 'IA-180-samir-ansible', credentialsId: 'github2', url: 'https://github.com/DevOpsAcademySS/DevOpsAcademySS'
        }
    }
    stage('Run playbook') {
      steps {
        sh 'cp ../maven/target/citizen.war /roles/tomcat/files/'
        sh 'ansible-playbook --private-key=$ANSIBLE_PRIVATE_KEY main.yml'
      }
    }
  }
}