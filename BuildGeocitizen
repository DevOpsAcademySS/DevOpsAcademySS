pipeline {
  agent any
  tools {
    maven 'maven'
  }

  environment {
    DOCKERHUB_CREDENTIALS = credentials('DockerHub')
  }

  stages {

      stage('Git Checkout') {
          steps {
                git branch: 'main', credentialsId: 'github2', url: 'https://github.com/DevOpsAcademySS/Geocitizen'
          }
      }

      stage('Build Geocitizen') {
          steps {
            sh './script.sh'
            sh 'mvn clean package'
          }
      }

      stage('Push war file') {
          steps {
               nexusArtifactUploader artifacts: [
                    [
                        artifactId: 'geo-citizen',
                        classifier: '',
                        file: 'target/citizen.war',
                        type: 'war'
                    ]
                ],
                credentialsId: 'nexus3',
                groupId: 'com.softserveinc',
                nexusUrl: '34.68.43.153:8081',
                nexusVersion: 'nexus3',
                protocol: 'http',
                repository: 'citizen-release',
                version: '1.0.5-SNAPSHOT'
          }
      }
      stage('Build docker') {
          steps{
              sh 'docker build . -t  2ti2225gz2/geocitizen:1.0'
          }
      }

      stage('Login') {
          steps{
              sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
          }
      }

      stage('Push docker image') {
          steps {
                sh 'ddocker push 2ti2225gz2/geocitizen:1.0'
          }
      }
  }
}
