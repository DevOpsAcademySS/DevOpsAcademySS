pipeline{
    agent any
    stages{
        stage('Terragrunt Apply'){
            steps{
                withAWS(credentials: 'aws-credential-geocitizen') {
                    sh 'export TF_CLI_ARGS="-no-color"'
                    sh '(cd aws-geo && terragrunt apply --auto-approve -no-color)'
                }
            }
        }
    }
    post {
        success {
            echo 'all good!!!!'
        }
        failure { 
            echo 'something went wrong'
        }
    }
}